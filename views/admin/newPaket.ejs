<html>

<head>
  <link crossorigin="anonymous" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" rel="stylesheet" />
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
  <style>
    body {
      background-color: #f8f9fa;
    }

    .navbar {
      background-color: #f5f5f5;
      padding: 0.5rem 1rem;
    }

    .navbar-brand img {
      max-width: 100px;
      /* Maksimal lebar gambar */
      max-height: 100px;
      /* Maksimal tinggi gambar */
      width: auto;
      /* Menyesuaikan lebar otomatis */
      height: auto;
      /* Menyesuaikan tinggi otomatis */
    }

    .navbar-nav .nav-link {
      font-size: 1rem;
      /* Ukuran font default */
      font-weight: bold;
      transition: transform 0.3s ease, color 0.3s ease;
      /* Tambahkan animasi */
      color: #343a40;
      /* Warna default teks */
    }

    .navbar-nav .nav-link:hover {
      transform: scale(1.2);
      /* Membesarkan teks saat hover */
      color: #f96332;
      /* Ubah warna teks saat hover */
    }

    .nav-icon i {
      font-size: 1.5rem;
      /* Besarkan ikon */
      transition: transform 0.3s ease, color 0.3s ease;
      /* Tambahkan animasi */
    }

    .nav-icon:hover i {
      transform: scale(1.2);
      /* Membesarkan ikon saat hover */
      color: #f96332;
      /* Ubah warna ikon saat hover */
    }

    .nav-icon-logout i {
      font-size: 1.5rem;
      /* Besarkan ikon */
      transition: transform 0.3s ease, color 0.3s ease;
      /* Tambahkan animasi */
    }

    .nav-icon-logout:hover i {
      transform: scale(1.2);
      /* Membesarkan ikon saat hover */
      color: red;
      /* Ubah warna ikon saat hover */
    }

    .header {
      font-size: 24px;
      font-weight: bold;
      margin: 20px 0;
    }

    .header-line {
      height: 4px;
      background-color: #f96332;
      width: 167vh;
      margin-bottom: 20px;
    }

    .form-container {
      background-color: #d3d3d3;
      padding: 20px;
      border-radius: 10px;
    }

    .upload-box {
      border: 2px dashed #6c757d;
      padding: 20px;
      text-align: center;
      border-radius: 10px;
      margin-bottom: 20px;
    }

    .upload-box p {
      margin: 0;
    }

    .btn-browse {
      background-color: #000;
      color: #fff;
      border: none;
      padding: 10px 20px;
      border-radius: 5px;
    }

    .btn-create {
      background-color: #000;
      color: #fff;
      border: none;
      padding: 10px 20px;
      border-radius: 5px;
      width: 100%;
    }

    .route-btn {
      background-color: #fff;
      border: 1px solid #6c757d;
      border-radius: 20px;
      padding: 5px 15px;
      margin: 5px;
    }
  </style>
</head>

<body>
  <nav class="navbar navbar-expand-lg navbar-light">
    <div class="container">
      <a class="navbar-brand" href="#">
        <img alt="Orange Travel Logo" src="/image/Logo.png" />
      </a>
      <button aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation" class="navbar-toggler"
        data-bs-target="#navbarNav" data-bs-toggle="collapse" type="button">
        <span class="navbar-toggler-icon">
        </span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/admin/dashboardadmin">
              Transaksi
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/admin/paket">
              Bundling
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link nav-icon" href="/admin/paket">
              <i class="fas fa-cog">
              </i>
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link nav-icon-logout" href="/admin/logout">
              <i class="fas fa-sign-out-alt"></i>
            </a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
  <div class="container mt-4">
    <a class="me-3" href="#">
      <i class="fas fa-arrow-left fa-2x">
      </i>
    </a>

    <div class="header">CREATE BUNDLING</div>
    <div class="header-line"></div>

    <div class="form-container">
      <form action="/admin/paket/new" enctype="multipart/form-data" method="POST">
        <div class="row">
          <div class="col-md-6">
            <div class="mb-3">
              <label class="form-label" for="Nama_paket">
                Nama Paket
              </label>
              <input class="form-control" id="Nama_paket" name="Nama_paket" placeholder="Masukkan Nama Paket"
                required="" type="text" />
            </div>
            <div class="mb-3">
              <label class="form-label" for="Harga">
                Harga
              </label>
              <input class="form-control" id="Harga" name="Harga" placeholder="Masukkan Harga Paket" required=""
                step="0.01" type="number" />
            </div>
            <div class="mb-3">
              <label class="form-label" for="Deskripsi">
                Deskripsi
              </label>
              <textarea class="form-control" id="Deskripsi" name="Deskripsi" placeholder="Masukkan Deskripsi"
                required=""></textarea>
            </div>
          </div>
          <div class="col-md-6">
            <div class="upload-box" id="uploadBox">
              <p>Drag and drop images here</p>
              <p>Or click to upload from your computer</p>
              <input type="file" accept="image/*" class="form-control" id="Gambar" name="Gambar"
                style="display: none;" />
              <img id="previewImage" style="max-width: 100%; max-height: 200px; margin-top: 10px; display: none;" />
            </div>
          </div>
        </div>
        <button class="btn-create" type="submit">
          Create Paket
        </button>
      </form>
    </div>
  </div>
  <script>
    document.addEventListener("DOMContentLoaded", function () {
      const uploadBox = document.querySelector(".upload-box");
      const inputFile = document.getElementById("Gambar");

      // Buat elemen untuk menampilkan gambar
      const previewImage = document.createElement("img");
      previewImage.style.maxWidth = "100%";
      previewImage.style.maxHeight = "200px";
      previewImage.style.marginTop = "10px";
      previewImage.style.borderRadius = "10px";
      uploadBox.appendChild(previewImage);

      // Event untuk drag & drop
      uploadBox.addEventListener("dragover", (event) => {
        event.preventDefault();
        uploadBox.style.backgroundColor = "#e9ecef";
      });

      uploadBox.addEventListener("dragleave", () => {
        uploadBox.style.backgroundColor = "";
      });

      uploadBox.addEventListener("drop", (event) => {
        event.preventDefault();
        uploadBox.style.backgroundColor = "";

        const file = event.dataTransfer.files[0];
        if (file && file.type.startsWith("image/")) {
          displayImage(file);
          inputFile.files = event.dataTransfer.files; // Set file ke input
        } else {
          alert("Please drop a valid image file.");
        }
      });

      // Event untuk klik input file
      inputFile.addEventListener("change", (event) => {
        const file = event.target.files[0];
        if (file && file.type.startsWith("image/")) {
          displayImage(file);
        } else {
          alert("Please select a valid image file.");
        }
      });

      // Fungsi untuk menampilkan gambar
      function displayImage(file) {
        const reader = new FileReader();
        reader.onload = (event) => {
          previewImage.src = event.target.result;
        };
        reader.readAsDataURL(file);
      }
    });
  </script>

</body>

</html>
