<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>List Transaksi</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <style>
        body {
            background-color: #f8f9fa;
        }
        
        .navbar {
            background-color: #f5f5f5;
            padding: 0.5rem 1rem;
        }
        
        .navbar-brand img {
            max-width: 100px;
            /* Maksimal lebar gambar */
            max-height: 100px;
            /* Maksimal tinggi gambar */
            width: auto;
            /* Menyesuaikan lebar otomatis */
            height: auto;
            /* Menyesuaikan tinggi otomatis */
        }
        
        .navbar-nav .nav-link {
            font-size: 1rem;
            /* Ukuran font default */
            font-weight: bold;
            transition: transform 0.3s ease, color 0.3s ease;
            /* Tambahkan animasi */
            color: #343a40;
            /* Warna default teks */
        }
        
        .navbar-nav .nav-link:hover {
            transform: scale(1.2);
            /* Membesarkan teks saat hover */
            color: #f96332;
            /* Ubah warna teks saat hover */
        }
        
        .nav-icon i {
            font-size: 1.5rem;
            /* Besarkan ikon */
            transition: transform 0.3s ease, color 0.3s ease;
            /* Tambahkan animasi */
        }
        
        .nav-icon:hover i {
            transform: scale(1.2);
            /* Membesarkan ikon saat hover */
            color: #f96332;
            /* Ubah warna ikon saat hover */
        }
        
        .nav-icon-logout i {
            font-size: 1.5rem;
            /* Besarkan ikon */
            transition: transform 0.3s ease, color 0.3s ease;
            /* Tambahkan animasi */
        }
        
        .nav-icon-logout:hover i {
            transform: scale(1.2);
            /* Membesarkan ikon saat hover */
            color: red;
            /* Ubah warna ikon saat hover */
        }
        
        .header {
            font-size: 24px;
            font-weight: bold;
            margin: 20px 0;
        }
        
        .header-line {
            height: 4px;
            background-color: #f96332;
            width: 100px;
            margin-bottom: 20px;
        }
        
        .search-bar {
            border-radius: 50px;
            padding: 10px 20px;
            background-color: #f1f3f4;
        }
        
        .search-bar input {
            border: none;
            background: none;
            outline: none;
            width: 100%;
        }
        
        .table-container {
            background-color: white;
            border-radius: 15px;
            padding: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        
        .table th,
        .table td {
            vertical-align: middle;
        }
        
        .table th {
            font-weight: bold;
        }
        
        .table td img {
            width: 20px;
            height: 20px;
        }
        
        .table td .fa-trash {
            color: red;
            cursor: pointer;
        }
        
        .btn-delete {
            background-color: #f8f9fa;
            color: white;
            border: none;
            padding: 5px 10px;
            border-radius: 5px;
            cursor: pointer;
        }
        
        .btn-logout {
            background-color: #f96332;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
        }
    </style>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
            <a class="navbar-brand" href="#">
                <img alt="Orange Travel Logo" src="/image/Logo.png" />
            </a>
            <button aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation" class="navbar-toggler" data-bs-target="#navbarNav" data-bs-toggle="collapse" type="button">
                <span class="navbar-toggler-icon">
                </span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/dashboardadmin">
                            Transaksi
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/paket">
                            Bundling
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav-icon" href="/admin/paket">
                            <i class="fas  fa-cog">
                            </i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav-icon-logout" href="/admin/logout">
                            <i class="fas fa-sign-out-alt"></i>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container">
        <div class="header">LIST TRANSAKSI</div>
        <div class="header-line"></div>
        <div class="table-container">
            <div class="search-bar mb-3">
                <i class="fas fa-search"></i>
                <input type="text" placeholder="Search Transaksi">
            </div>
            <table class="table">
                <thead>
                    <tr>
                        <th>ID Transaksi</th>
                        <th>ID</th>
                        <th>ID Paket</th>
                        <th>Jumlah Pembayaran</th>
                        <th>Bukti Pembayaran</th>
                        <th>Jenis Pembayaran</th>
                        <th>ACTION</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (transaksi && transaksi.length> 0) { %>
                        <% transaksi.forEach(transaksi=> { %>
                            <tr>
                                <td>
                                    <%= transaksi.ID_Transaksi %>
                                </td>
                                <td>
                                    <%= transaksi.id %>
                                </td>
                                <td>
                                    <%= transaksi.ID_Paket %>
                                </td>
                                <td>Rp
                                    <%= transaksi.Jumlah_Pembayaran %>
                                </td>
                                <td>
                                    <%= transaksi.jenis_pembayaran %>
                                </td>
                                <td>
                                    <% if (transaksi.Bukti_Pembayaran) { %>
                                        <img src="data:image/png;base64,<%= transaksi.Bukti_Pembayaran %>" alt="Bukti Pembayaran" style="max-width: 20px; height: auto;">
                                        <% } else { %>
                                            No payment proof available.
                                            <% } %>
                                </td>
                                <td>
                                    <form action="/admin/transaksi/<%= transaksi.ID_Transaksi %>/deletePage" method="GET" onsubmit="return confirm('Apakah Anda yakin?');">
                                        <button type="submit" class="btn btn-danger">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                    </form>
                                </td>

                            </tr>
                            <% }); %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="6">No transactions found.</td>
                                    </tr>
                                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</body>

</html>