<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - Paket Bundling</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <div class="container mt-5">
        <h1 class="text-center text-primary mb-4">Daftar Paket Bundling</h1>
        <h1>Selamat datang, <%= user.username %>!</h1>
        <a href="/user/riwayat-transaksi" class="btn btn-primary">Riwayat Transaksi</a>

        <!-- Icon Keranjang dengan Jumlah Item -->
        <div class="text-right mb-3">
            <a href="/user/keranjang" class="btn btn-warning">
                ðŸ›’ Keranjang (<span id="cart-count"><%= keranjangCount %></span>)
            </a>
        </div>

        <div class="row">
            <% paket.forEach(p => { %>
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <% if (p.Gambar) { %>
                            <img src="data:image/png;base64,<%= p.Gambar.toString('base64') %>" class="card-img-top" alt="<%= p.Nama_paket %>">
                        <% } else { %>
                            <img src="https://via.placeholder.com/300?text=No+Image" class="card-img-top" alt="Gambar tidak tersedia">
                        <% } %>
                        <div class="card-body">
                            <h5 class="card-title"><%= p.Nama_paket %></h5>
                            <p class="card-text"><%= p.Deskripsi %></p>
                            <p class="text-success font-weight-bold">Rp <%= p.Harga %></p>

                            <!-- Formulir untuk menambahkan item ke keranjang -->
                            <form action="/user/keranjang/add" method="POST">
                                <input type="hidden" name="ID_Paket" value="<%= p.ID_Paket %>">
                                <input type="hidden" name="userId" value="<%= user.id %>">
                                <button type="submit" class="btn btn-primary">Tambah ke Keranjang</button>
                            </form>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>

        <!-- Tombol Logout -->
        <div class="text-right mt-4">
            <a href="/user/logout" class="btn btn-danger">Logout</a>
        </div>
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.4.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>