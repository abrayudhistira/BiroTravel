<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Riwayat Transaksi</title>
    <!-- Link Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEJd5K2j4Y4Q8hJ2RI6oOmED1+72I9+x+z/kq0OfgkE5IWlYoOgF0WbDQw9F2" crossorigin="anonymous">
    <style>
        body {
            background-color: #f1f1f1;
            font-family: Arial, sans-serif;
        }
        .container {
            margin-top: 40px;
        }
        .card-header {
            background-color: #28a745; /* Warna hijau */
            color: white;
        }
        .table th, .table td {
            vertical-align: middle;
            padding: 15px 20px; /* Menambah jarak dalam kolom */
        }
        h1 {
            color: #007bff;
            font-weight: bold;
            margin-bottom: 20px;
        }
        .card {
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        .table th {
            font-size: 1.1rem; /* Membuat teks header lebih besar */
        }
        .table td {
            font-size: 1rem; /* Ukuran teks untuk data lebih besar */
        }
    </style>
</head>
<body>

<div class="container">
    <!-- Judul -->
    <h1 class="text-center">Riwayat Transaksi</h1>

    <!-- Card with Table displaying transaction history -->
    <div class="card">
        <div class="card-header text-center">
            <h4>Riwayat Transaksi Anda</h4>
        </div>

        <div class="card-body">
            <% if (transaksi.length > 0) { %>
                <table class="table table-bordered table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>ID Transaksi</th>
                            <th>Nama Paket</th>
                            <th>Harga Paket</th>
                            <th>Jumlah Pembayaran</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% transaksi.forEach(t => { %>
                            <tr>
                                <td><%= t.ID_Transaksi %></td>
                                <td><%= t.PaketBundling ? t.PaketBundling.Nama_paket : 'Paket Tidak Ditemukan' %></td>
                                <td><%= t.PaketBundling ? t.PaketBundling.Harga : 'Tidak Diketahui' %></td>
                                <td><%= t.Jumlah_Pembayaran %></td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            <% } else { %>
                <p class="text-center">Belum ada riwayat transaksi.</p>
            <% } %>
        </div>
    </div>

    <!-- Kembali ke dashboard button -->
    <div class="text-center mt-4">
        <a href="/user/dashboard" class="btn btn-primary">Kembali ke Dashboard</a>
    </div>
</div>

<!-- Link Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-mQ93s+3p2Rl+rXqVv4mg6W9jsoM9qS7Afdo+yZNt/TKkZ+cWxI4jk0lPBxVmn5dp" crossorigin="anonymous"></script>
</body>
</html>
