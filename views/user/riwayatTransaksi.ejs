<!DOCTYPE html>
<html lang="id">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Riwayat Order</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            padding: 20px;
            background-color: #f5f5f5;
        }
        
        .container {
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        
        h1 {
            font-size: 28px;
        }
        
        .status {
            display: inline-block;
            padding: 5px 10px;
            border-radius: 20px;
            background-color: #8bc34a;
            color: white;
        }
        
        .info-box {
            display: flex;
            justify-content: space-between;
            margin-top: 20px;
        }
        
        .card {
            padding: 20px;
            border-radius: 10px;
            background: #f9f9f9;
            width: 48%;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }
        
        .product {
            border: 1px solid #ddd;
            padding: 15px;
            border-radius: 10px;
            margin-top: 10px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        
        .total {
            text-align: right;
            font-size: 20px;
            font-weight: bold;
            margin-top: 20px;
        }
        
        .download-link {
            text-align: right;
            margin-top: 10px;
        }
        
        .download-link a {
            text-decoration: none;
            color: #333;
        }
    </style>
</head>

<body>
    <div class="container">
        <h1>RIWAYAT ORDER</h1>
        <% transaksi.forEach((t, index) => { %>
            <!-- Header Order -->
            <p>Order ID: #
                <%= t.id %> <span class="status"><%= t.status_pembayaran || 'Belum Lunas' %></span></p>
            <p>
                <%= new Date(t.createdAt).toLocaleDateString('id-ID') %>
            </p>
            <div class="download-link">
                <a href="#">Download Transaksi â¬‡</a>
            </div>

            <!-- Informasi Penerima dan Pembayaran -->
            <div class="info-box">
                <!-- Informasi Penerima -->
                <div class="card">
                    <h3>Recipient Information</h3>
                    <p><strong>Nama:</strong>
                        <%= t.User ? t.User.nama : 'Tidak ada nama' %>
                    </p>
                    <p><strong>Email:</strong>
                        <%= t.User ? t.User.email : 'Tidak ada email' %>
                    </p>
                    <p><strong>Alamat:</strong>
                        <%= t.User ? t.User.alamat : 'Tidak ada alamat' %>
                    </p>
                    <p><strong>No. Telepon:</strong>
                        <%= t.User ? t.User.no_telp : 'Tidak ada nomor' %>
                    </p>
                    <p><strong>Username:</strong>
                        <%= t.User ? t.User.username : 'Tidak ada username' %>
                    </p>
                </div>

                <!-- Informasi Pembayaran -->
                <div class="card">
                    <h3>Payment Information</h3>
                    <p><strong>Jenis Pembayaran:</strong>
                        <%= t.jenis_pembayaran ? t.jenis_pembayaran : 'Tidak ada' %>
                    </p>
                    <p><strong>Nomor Dana:</strong> 083126783674</p>
                    <p><strong>Total Pembayaran:</strong> Rp
                        <%= t.Jumlah_Pembayaran.toLocaleString('id-ID') %>
                    </p>
                </div>
            </div>

            <!-- Daftar Produk -->
            <h2>PRODUCT</h2>
            <div class="product">
                <div>
                    <p><strong><%= t.paketbundling ? t.paketbundling.Nama_paket : 'Tidak ada paket' %></strong></p>
                    <p>Rp
                        <%= t.paketbundling ? t.paketbundling.Harga.toLocaleString('id-ID') : '0' %>
                    </p>
                </div>
                <p><strong>X 2</strong></p>
            </div>

            <!-- Total Pembayaran -->
            <div class="total">
                Total: Rp
                <%= t.Jumlah_Pembayaran.toLocaleString('id-ID') %>
            </div>
            <hr>
            <% }) %>
    </div>
</body>

</html>